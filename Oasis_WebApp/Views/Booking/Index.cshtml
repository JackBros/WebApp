<!-- BOOKING -->
<div class="form-container">
    <section id="contact-form">
        <div class="container py-3">
            <h1 class="l-heading">
                BOOK YOUR VACATION ONLINE
            </h1>
            <p>Please fill out the form below to book your vacation.</p>
            <form action="#">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" placeholder="Your first name" required />
                </div>
                <div class="form-group">
                    <label for="Surname">Email</label>
                    <input type="text" name="surname" id="surname" placeholder="Your last name" required />
                </div>
                <div class="form-group">
                    <label for="date">Reservation Date</label>
                    <input type="date" required>
                </div>
                <div class="form-group">
                    <label for="message">How Many People</label>
                    <select>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                    </select>
                </div>
                <button class="btn" type="submit">Submit</button>
            </form>
        </div>
    </section>
</div>
